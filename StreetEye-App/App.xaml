<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StreetEye_App"
             xmlns:converter="clr-namespace:StreetEye_App.Converter"
             x:Class="StreetEye_App.App">
    <Application.Resources>
        <ResourceDictionary>
            <converter:StatusToColorConverter x:Key="StatusToColorConverter" />
            <converter:StatusTextColorConverter x:Key="StatusTextColorConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
