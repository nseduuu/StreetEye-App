<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StreetEye_App.Views.Usuarios.LoginUsuarioView"
             Background="WhiteSmoke">
    <ScrollView>
        <StackLayout Spacing="20" Margin="15" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="crossolutions_semtexto.png" HeightRequest="100"/>
            <Label Text="StreetEye" FontSize="Large" HorizontalOptions="Center" TextColor="Black" />
            <Entry Placeholder="Email" Text="{Binding Email}" TextColor="Black"/>
            <Entry Placeholder="Senha" Text="{Binding Password}" IsPassword="True" TextColor="Black" />
            <Button Text="Entrar" Command="{Binding LoginCommand}" TextColor="White" BackgroundColor="Black" />
        </StackLayout>
    </ScrollView>
</ContentPage>