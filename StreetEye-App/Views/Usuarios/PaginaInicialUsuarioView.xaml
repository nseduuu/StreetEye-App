<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StreetEye_App.Views.Usuarios.PaginaInicialUsuarioView"
             Title="PaginaInicialUsuarioView"
             BackgroundColor="White">
    
    <VerticalStackLayout Spacing="30" Padding="10" HorizontalOptions="Center">

        <Image Source="crossolutions_semtexto.png" HeightRequest="100"/>
        
        <Label Text="Street Eye" FontSize="Medium" 
               TextColor="Black"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <Button BackgroundColor="Black"
               TextColor="White"
               Padding="60,0,60,0"
               Text="Cadastrar" FontAttributes="Bold"
               Command="{Binding DirecionarCadastroViewCommand}"/>

        <Button BackgroundColor="White"
                BorderColor="LightGray"
                BorderWidth="2"
                TextColor="Black"
                Padding="60,0,60,0"
                Text="Fazer login" FontAttributes="Bold"
                Command="{Binding DirecionarLoginViewCommand}"/>

    </VerticalStackLayout>
</ContentPage>