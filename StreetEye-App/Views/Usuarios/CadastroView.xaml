<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StreetEye_App.Views.Usuarios.CadastroView"
             Title="CadastroView">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="StreetEye" FontSize="Large" HorizontalOptions="Center" />
            <Entry Placeholder="Email" Text="{Binding Email}" />
            <Entry Placeholder="Senha" Text="{Binding Password}" IsPassword="True" />
            <Entry Placeholder="Nome" Text="{Binding Nome}"/>
            <Entry Placeholder="AAAA/MM/DD" Text="{Binding Data}"/>
            <Entry Placeholder="Telefone" Text="{Binding Telefone}"/>
            <Entry Placeholder="Endereço" Text="{Binding Endereco}"/>
            <Entry Placeholder="Numero endereço" Text="{Binding NumeroEndereco}"/>
            <Entry Placeholder="Complemento" Text="{Binding Complemento}"/>
            <Entry Placeholder="Bairro" Text="{Binding Bairro}"/>
            <Entry Placeholder="Cidade" Text="{Binding Cidade}"/>
            <Entry Placeholder="UF" Text="{Binding Uf}"/>
            <Entry Placeholder="CEP" Text="{Binding Cep}"/>
            <Button Text="Registrar" Command="{Binding RegistrarCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>