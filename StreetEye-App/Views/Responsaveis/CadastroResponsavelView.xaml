<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StreetEye_App.Views.Responsaveis.CadastroResponsavelView"
             Title="CadastroResponsavelView">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="StreetEye" TextColor="Black" FontSize="Large" HorizontalOptions="Center" />
            <Entry Placeholder="Nome" Text="{Binding Nome}" TextColor="Black"/>
            <Entry Placeholder="Data de nascimento" Text="{Binding Data}" TextColor="Black"/>
            <Entry Placeholder="Telefone" Text="{Binding Telefone}" TextColor="Black"/>
            <Entry Placeholder="Endereço" Text="{Binding Endereco}" TextColor="Black"/>
            <Entry Placeholder="Numero endereço" Text="{Binding NumeroEndereco}" TextColor="Black"/>
            <Entry Placeholder="Complemento" Text="{Binding Complemento}" TextColor="Black"/>
            <Entry Placeholder="Bairro" Text="{Binding Bairro}" TextColor="Black"/>
            <Entry Placeholder="Cidade" Text="{Binding Cidade}" TextColor="Black"/>
            <Entry Placeholder="UF" Text="{Binding Uf}" TextColor="Black"/>
            <Entry Placeholder="CEP" Text="{Binding Cep}" TextColor="Black"/>
            <Button Text="Registrar" Command="{Binding RegistrarResponsavelCommand}" TextColor="Black"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>